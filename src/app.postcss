@keyframes full-pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.2;
  }
}

@keyframes helix {
  0% {
    width: 5px;
    height: 5px;
    bottom: -5px;
    z-index: 10;
  }
  25% {
    width: 2px;
    height: 2px;
  }
  50% {
    width: 5px;
    height: 5px;
    bottom: 100%;
    z-index: 20;
  }
  75% {
    width: 8px;
    height: 8px;
  }
  100% {
    width: 5px;
    height: 5px;
    bottom: -5px;
  }
}

@keyframes helix-reversed {
  0% {
    width: 5px;
    height: 5px;
    bottom: 100%;
    z-index: 20;
  }
  25% {
    width: 8px;
    height: 8px;
  }
  50% {
    width: 5px;
    height: 5px;
    bottom: -5px;
    z-index: 10;
  }
  75% {
    width: 2px;
    height: 2px;
  }
  100% {
    width: 5px;
    height: 5px;
    bottom: 100%;
  }
}

body {
  @apply relative min-h-screen bg-transparent transition-colors dark:bg-gray-800 dark:text-gray-200;
}

:global(.dark) body {
  @apply bg-gray-800 text-gray-200;
}

.greenscreen,
.greenscreen.green {
  --gscreen: #09a43f;
}

.greenscreen.blue {
  --gscreen: #0143b2;
}

.greenscreen body,
.greenscreen nav,
.greenscreen .modal-positioning {
  background-color: var(--gscreen) !important;
}

.greenscreen nav::before {
  background: linear-gradient(var(--gscreen), 50%, transparent) !important;
}

.greenscreen .shadow-highlight,
.greenscreen .dark\:shadow-highlight,
.greenscreen .shadow-lg,
.greenscreen .dark\:shadow-lg,
.greenscreen .shadow-mark,
.greenscreen .dark\:shadow-mark,
.greenscreen .shadow-md,
.greenscreen .dark\:shadow-md,
.greenscreen .shadow-none,
.greenscreen .dark\:shadow-none,
.greenscreen .shadow-sm,
.greenscreen .dark\:shadow-sm,
.greenscreen .shadow-text,
.greenscreen .dark\:shadow-text,
.greenscreen .shadow-xl,
.greenscreen .dark\:shadow-xl {
  box-shadow: none !important;
}

.g-container {
  @apply mx-auto max-w-6xl overflow-x-hidden px-4 md:px-12;
}

.p-container {
  @apply mx-auto flex w-full justify-between px-4 md:w-11/12 md:px-12 xl:w-3/4;
}

.window {
  width: 100% !important;
  margin: 1rem 0 !important;
}
.window-wrap {
  margin: 0 1rem !important;
}

@media (min-width: theme('screens.sm')) {
  .window {
    width: fit-content !important;
    margin: 2rem auto !important;
  }
  .window-wrap {
    margin: 0 2rem !important;
  }
}

.bg + main {
  filter: blur(5px);
}

.drop-shadow-highlight {
  filter: drop-shadow(1px 1px 0 theme('colors.yellow.500'))
    drop-shadow(-1px -1px 0 theme('colors.yellow.500'))
    drop-shadow(-1px 1px 0 theme('colors.yellow.500'))
    drop-shadow(1px -1px 0 theme('colors.yellow.500')) !important;
}

.drop-shadow-mark {
  filter: drop-shadow(2px 2px 0 theme('colors.gray.900'))
    drop-shadow(-2px -2px 0 theme('colors.gray.900'))
    drop-shadow(-2px 2px 0 theme('colors.gray.900'))
    drop-shadow(2px -2px 0 theme('colors.gray.900')) !important;
}

.shake {
  animation: shake 3.2s cubic-bezier(0.36, 0.07, 0.19, 0.97) infinite;
}

@keyframes shake {
  0%,
  50% {
    transform: translate(var(--tw-translate-x), var(--tw-translate-y)) rotate(0);
  }
  5%,
  45% {
    transform: translate(var(--tw-translate-x), var(--tw-translate-y))
      rotate(-2deg);
  }
  10%,
  40% {
    transform: translate(var(--tw-translate-x), var(--tw-translate-y))
      rotate(2deg);
  }
  15%,
  25%,
  35% {
    transform: translate(var(--tw-translate-x), var(--tw-translate-y))
      rotate(-5deg);
  }
  20%,
  30% {
    transform: translate(var(--tw-translate-x), var(--tw-translate-y))
      rotate(5deg);
  }
}

