.error-modal {
  @apply pointer-events-auto fixed top-1/2 left-1/2 rounded-lg bg-gray-100 p-8 text-gray-900;
  width: 340px;
  transform: translate(-50%, -50%);
}

.dark .error-modal {
  @apply bg-gray-800 text-gray-50;
}

.error-modal h2 {
  @apply pb-3 text-3xl font-bold leading-8;
}

.error-modal img {
  @apply mx-auto -mt-20 scale-200 pb-3;
  image-rendering: pixelated;
}

.error-modal button {
  @apply mt-5 w-full rounded-lg border-2 border-gray-900 py-2 font-bold transition;
}

.dark .error-modal button {
  @apply border-gray-50 bg-gray-900;
}

.error-modal button:hover {
  @apply border-blue-400 bg-blue-100 text-blue-600 ring-2 ring-blue-400;
}

.dark .error-modal button:hover {
  @apply border-blue-600 bg-gray-900 text-blue-500 ring-2 ring-blue-600;
}

.error-modal-container {
  @apply pointer-events-none fixed inset-0;
  z-index: 99999999;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
}

/* Custom scrollbar styles */
@layer utilities {
  .scrollbar-thin {
    scrollbar-width: thin;
    scrollbar-color: theme('colors.gray.400') theme('colors.gray.100');
  }

  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    @apply rounded-full bg-gray-400;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    @apply bg-gray-500;
  }

  .dark .scrollbar-thin {
    scrollbar-color: theme('colors.gray.600') theme('colors.gray.800');
  }
}

/* Apply globally to all scrollable elements */
* {
  @apply scrollbar-thin;
}
